<div >
  <h5>
    Edit Yogi Account
  </h5>

  <% if @yogi.errors.any? %>
  <% @yogi.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/modify_yogi" method="post">
              
      <div>
        <label for="email_box">Email</label>
          
        <input id="email_box" name="query_email" value="<%= @current_yogi.email %>">
          
      </div>
                                    
      <div>
        <label for="first_name_box">First name</label>
          
        <input id="first_name_box" name="query_first_name" value="<%= @current_yogi.first_name %>">
          
      </div>
                      
      <div>
        <label for="last_name_box">Last name</label>
          
        <input id="last_name_box" name="query_last_name" value="<%= @current_yogi.last_name %>">
          
      </div>
              
      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a new password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your new password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
