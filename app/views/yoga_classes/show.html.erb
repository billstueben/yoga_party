<hr>


<div>
  <div>
    <h2>
      Edit yoga class
    </h2>

    <form action="/modify_yoga_class/<%= @the_yoga_class.id %>"  method="post" >
      <div>
        <label for="yogi_id_box">
          Yogi
        </label>

        <input type="text" id="yogi_id_box" name="query_yogi_id" value="<%= @the_yoga_class.yogi_id %>">
      </div>

      <div>
        <label for="duration_secs_box">
          Duration secs
        </label>

        <input type="text" id="duration_secs_box" name="query_duration_secs" value="<%= @the_yoga_class.duration_secs %>">
      </div>

      <div>
        <input type="checkbox" id="public_to_all_box" name="query_public_to_all" value="1" <%= "checked" if @the_yoga_class.public_to_all %>>

        <label for="public_to_all_box">
            Public to all
        </label>
      </div>

      <button>
        Update yoga class
      </button>
    </form>
  </div>
</div>

<hr>

<hr>

<div>
  <div>
    <h2>
      Add a new pose
    </h2>

    <form action="/insert_class_pose/<%= @the_yoga_class.id %>" method="post">
      <select name="query_name" id="query_name_box">

      <% Pose.where({ :chapter_id => 1 }).each do |a_pose| %>    
      <option value="<%=a_pose.name%>">
        <%=a_pose.name%>
      </option>
      <% end %>
      </select>

      <select name="query_chapter_id" id="query_chapter_id_box">
      <% @matching_chapters.each do |a_chapter| %>    
        <option value="<%=a_chapter.id%>">
          <%=a_chapter.name%>
        </option>
        <% end %>
        </select>

      <button>
        Add pose
      </button>
    </form>
  </div>
</div>

<hr>

<h2>Warm up poses</h2>

<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Name
        </th>

        <th>
          Picture
        </th>

        <th>
          Tips
        </th>

        <th>
          Duration secs
        </th>

        <th>
          Details
        </th>

        <th>
          Remove
        </th>

      </tr>

      <% Pose.where({:chapter_id => @warm_up_chapter.at(0).id}).each do |a_pose| %>

      <tr>
    

        <td>
          <%= a_pose.name %>
        </td>

        <td>
          <img width= 300px src="<%=a_pose.picture %>">
